<resources>

    <style name="mainAdLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/map_height_plus_margin</item>
        <item name="android:layout_below">@id/image_viewpager</item>
    </style>
    
    <style name="mapviewAdLayoutStyle">
        <item name="android:layout_width">@dimen/map_height</item>
        <item name="android:layout_height">@dimen/map_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
        <item name="android:layout_below">@id/image_viewpager</item>
    </style>

    <style name="reportAdLayoutStyle">
        <item name="android:layout_width">@dimen/map_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/mapview</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <dimen name="map_height_plus_margin">250dp</dimen>
</resources>
