<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contact_layout"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_layout_height"
    android:padding="@dimen/default_margin"
    android:background="@color/white_semi_trans"
    android:visibility="gone"
    tools:showIn="@layout/fragment_ad_details">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3">

        <TextView
            android:id="@+id/contact_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee" />

        <TextView
            android:id="@+id/contact_posting_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2">

        <Button
            android:id="@+id/call_button"
            style="@style/contactButtonStyle"
            android:text="@string/call" />

        <Button
            android:id="@+id/sms_button"
            android:text="@string/sms"
            style="@style/contactButtonStyle" />

        <Button
            android:id="@+id/email_button"
            style="@style/contactButtonStyle"
            android:text="@string/email" />
    </LinearLayout>
</LinearLayout>