<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/greenActionBar</item>
    </style>

    <style name="AppThemeNoActionBar" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="greenActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/gumtree_green</item>
        <item name="android:titleTextStyle">@style/whiteActionBarTitle</item>
    </style>

    <style name="whiteActionBarTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="separatorStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/separator_color</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
    </style>

    <style name="contactButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
    </style>

    <style name="mainAdLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/image_viewpager</item>
    </style>

    <style name="mapviewAdLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/map_height</item>
        <item name="android:layout_below">@id/main_layout</item>
    </style>

    <style name="reportAdLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/mapview</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>


</resources>
